extend ../layout/common
block nav
    include ../layout/nav.pug
block content
    form.d-flex(method="GET",action="/users")
        input.input-group.mr-5.w-75(type="text",name="q",value=q)
        button.btn.btn-primary Search
    a.btn.btn-primary(href="users/create") Create
    ul.mt-5
    table.table
        tr
            th Avatar
            th Name
            th Phone
            th Action
        each val in user
            tr
                td
                    img(src=""+val.avatar,width="32")
                td=val.name
                td=val.phone
                td
                    a(href="/users/"+val.id) View
                   
                        
                        