extend ../layout/common
block nav
    include ../layout/nav.pug
block content
    h1 Create
    if errors
        each error in errors
            .alert.alert-danger #{error}
    form(action="/users/create",method="POST",enctype="multipart/form-data")
        .form-group
            label(for="name") Name 
            input#name.form-control(type="text" name="name" value=values ? values.name:  "")
        .form-group
            label(for="phone") Phone 
            input#phone.form-control(type="text" name="phone" value = values ? values.phone:"")
        .form-group
            label(for="avatar") Avatar 
            br
            input#avatar(type="file",name="avatar")
        button.btn.btn-primary Submit